{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listEmittedFiles": true
  },
  "exclude": ["node_modules", "**/test/**/*"]
}
