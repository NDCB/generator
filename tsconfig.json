{
  "compilerOptions": {
    "lib": ["ESNEXT"],
    "module": "ESNEXT",
    "target": "ESNEXT",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listEmittedFiles": true
  },
  "exclude": ["node_modules", "**/test/**/*"]
}
