{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["esnext"],
		"target": "esnext",
		"alwaysStrict": true,
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"listFiles": true,
		"listEmittedFiles": true
	},
	"exclude": ["node_modules", "**/*.spec.ts"]
}
