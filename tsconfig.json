{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "CommonJS",
    "target": "ES2019",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true
  },
  "exclude": ["node_modules", "**/test/**/*"]
}
